{
  "compilerOptions": {
    "allowJs": false,
    "module": "CommonJS",
    "target": "es2015",
    "outDir": "./dist/",
    "sourceMap": true,
    "rootDir": "./",
    "strict": false,
    "preserveConstEnums": true,
    "declaration": true,
    "plugins": [{
      "name": "typescript-tslint-plugin"
    }]
  },
  "exclude": [
    "node_modules",
    ".nyc_output",
    "coverage",
    "dist",
    "test",
    ".circleci"
  ]
}